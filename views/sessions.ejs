<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>إدارة الحصص | أكاديمية المعالي</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap'); body { font-family: 'Cairo', sans-serif; background: #f1f5f9; }</style>
</head>
<body class="flex">
    <main class="flex-1 p-8">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-2xl font-bold">جدول الحصص اليومي</h1>
            <button onclick="openSessModal()" class="bg-blue-600 text-white px-6 py-2 rounded-xl">برمجة حصة جديدة</button>
        </div>

        <div class="bg-white rounded-3xl shadow-sm overflow-hidden">
            <table class="w-full text-right">
                <thead class="bg-slate-50 border-b">
                    <tr>
                        <th class="p-4">الطالب</th>
                        <th class="p-4">المادة</th>
                        <th class="p-4">التوقيت</th>
                        <th class="p-4">التاريخ</th>
                    </tr>
                </thead>
                <tbody>
                    <% sessions.forEach(sess => { %>
                    <tr class="border-b hover:bg-slate-50 transition">
                        <td class="p-4 font-bold"><%= sess.studentName %></td>
                        <td class="p-4 text-blue-600"><%= sess.subjectName %></td>
                        <td class="p-4"><%= sess.time %></td>
                        <td class="p-4 text-slate-500"><%= sess.date %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div id="sessModal" class="hidden fixed inset-0 bg-slate-900/50 backdrop-blur-sm flex items-center justify-center p-4">
            <form action="/sessions/add" method="POST" class="bg-white w-full max-w-md p-8 rounded-3xl shadow-2xl">
                <h2 class="text-2xl font-bold mb-6">برمجة حصة تعليمية</h2>
                <div class="space-y-4">
                    <select name="studentName" class="w-full border p-4 rounded-2xl outline-none">
                        <% students.forEach(stu => { %><option><%= stu.name %></option><% }) %>
                    </select>
                    <select name="subjectName" class="w-full border p-4 rounded-2xl outline-none">
                        <% subjects.forEach(sub => { %><option><%= sub.name %> - <%= sub.price %> دج</option><% }) %>
                    </select>
                    <input type="date" name="date" class="w-full border p-4 rounded-2xl outline-none" required>
                    <input type="time" name="time" class="w-full border p-4 rounded-2xl outline-none" required>
                </div>
                <div class="mt-8 flex gap-3">
                    <button type="submit" class="flex-1 bg-green-600 text-white py-4 rounded-2xl font-bold">تأكيد الحصة</button>
                    <button type="button" onclick="openSessModal()" class="flex-1 bg-slate-100 py-4 rounded-2xl font-bold">إلغاء</button>
                </div>
            </form>
        </div>
    </main>
    <script>function openSessModal() { document.getElementById('sessModal').classList.toggle('hidden'); }</script>
</body>
</html>
