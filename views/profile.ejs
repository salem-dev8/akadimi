<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بروفيل | <%= s.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap'); body { font-family: 'Cairo', sans-serif; background: #f8fafc; }</style>
</head>
<body class="pb-24">

    <div class="p-6 space-y-6">
        <div class="bg-white p-6 rounded-[2.5rem] shadow-sm border border-slate-100 flex items-center gap-4">
            <div class="w-16 h-16 bg-blue-600 rounded-3xl flex items-center justify-center text-white text-2xl font-black shadow-lg shadow-blue-100"><%= s.name[0] %></div>
            <div>
                <h2 class="text-lg font-bold text-slate-800"><%= s.name %></h2>
                <span class="text-[10px] bg-slate-100 px-2 py-1 rounded-lg text-slate-500 font-bold"><%= s.cycle %> - <%= s.year %></span>
            </div>
        </div>

        <div class="space-y-4">
            <% s.subjects.forEach((sub, idx) => { %>
            <div class="bg-white p-5 rounded-[2rem] border border-slate-100 shadow-sm">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="font-bold text-slate-700"><%= sub.name %></h3>
                    <button onclick="togglePaid('<%= s.id %>', <%= idx %>, this)" 
                        class="text-[10px] px-4 py-2 rounded-xl font-bold transition <%= sub.paid ? 'bg-green-500 text-white shadow-lg' : 'bg-red-50 text-red-500 border border-red-100' %>">
                        <%= sub.paid ? 'تم الدفع ✓' : 'غير خالص' %>
                    </button>
                </div>

                <div class="flex gap-2 mb-6">
                    <% sub.attendance.forEach((done, aIdx) => { %>
                    <div onclick="updateAtt('<%= s.id %>', <%= idx %>, <%= aIdx %>, this)" 
                         class="w-11 h-11 rounded-2xl border-2 flex items-center justify-center font-bold transition-all text-xs
                         <%= done ? 'bg-blue-600 border-blue-600 text-white shadow-md' : 'border-slate-100 text-slate-300' %>">
                        <%= aIdx + 1 %>
                    </div>
                    <% }) %>
                </div>

                <% if(sub.attendance.every(v => v === true)) { %>
                <button onclick="resetMonth('<%= s.id %>', <%= idx %>)" class="w-full py-4 bg-slate-900 text-white rounded-2xl text-xs font-bold shadow-xl animate-bounce">
                    فتح حصص الشهر الجديد <i class="fas fa-redo-alt mr-2"></i>
                </button>
                <% } %>
            </div>
            <% }) %>
        </div>
    </div>

    <div class="fixed bottom-6 left-1/2 -translate-x-1/2 w-[85%] bg-white/90 backdrop-blur-md border shadow-2xl rounded-full h-16 flex items-center justify-around px-6 z-50">
        <a href="/" class="<%= page === 'home' ? 'text-blue-600' : 'text-slate-300' %>"><i class="fas fa-home text-xl"></i></a>
        <div class="w-10 h-1 text-slate-100 bg-slate-100 rounded-full"></div>
        <a href="/profile/<%= s.id %>" class="<%= page === 'profile' ? 'text-blue-600' : 'text-slate-300' %>"><i class="fas fa-user-graduate text-xl"></i></a>
    </div>

    <script>
        async function updateAtt(id, subIdx, attIdx, btn) {
            const isVal = !btn.classList.contains('bg-blue-600');
            await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: subIdx, type: 'attendance', attIndex: attIdx, value: isVal.toString() })
            });
            location.reload();
        }

        async function togglePaid(id, subIdx, btn) {
            const isVal = !btn.classList.contains('bg-green-500');
            await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: subIdx, type: 'paid', value: isVal.toString() })
            });
            location.reload();
        }

        async function resetMonth(id, subIdx) {
            if(confirm('هل تريد إغلاق هذا الشهر وفتح شهر جديد؟')) {
                await fetch(`/reset-month/${id}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ subIndex: subIdx })
                });
                location.reload();
            }
        }
    </script>
</body>
</html>
