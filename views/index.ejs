<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أكاديمية المعالي</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap');
        body { font-family: 'Cairo', sans-serif; background: #f8fafc; overflow-x: hidden; }
        .attendance-checkbox { width: 32px; height: 32px; border-radius: 8px; border: 2px solid #e2e8f0; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 10px; transition: 0.1s; background: white; }
        .attendance-checkbox.checked { background: #10b981 !important; border-color: #10b981 !important; color: white !important; }
        .view-section { display: none; }
        .view-section.active { display: block; animation: slideIn 0.3s ease-out; }
        @keyframes slideIn { from { opacity: 0; transform: translateX(20px); } to { opacity: 1; transform: translateX(0); } }
    </style>
</head>
<body class="pb-24">

    <nav class="bg-white border-b p-4 sticky top-0 z-50 flex items-center gap-3">
        <img src="https://res.cloudinary.com/duixjs8az/image/upload/v1765132270/post_media/1765132269901-1765132158292.jpg" 
             class="w-10 h-10 rounded-full border border-blue-600">
        <h1 class="font-900 text-blue-900 text-lg">أكاديمية المعالي</h1>
    </nav>

    <main class="max-w-xl mx-auto p-4">
        
        <section id="statsView" class="view-section active">
            <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="bg-white p-4 rounded-3xl shadow-sm border border-slate-100 flex flex-col items-center">
                    <p class="text-[10px] text-slate-400 font-bold mb-2">توزيع الأطوار (فعلي)</p>
                    <canvas id="cycleChart" width="120" height="120"></canvas>
                </div>
                <div class="bg-blue-600 p-5 rounded-3xl text-white shadow-lg flex flex-col justify-center">
                    <p class="text-xs opacity-80">إجمالي الطلاب</p>
                    <h2 class="text-4xl font-900"><%= stats.total %></h2>
                    <div class="mt-4 bg-white/20 p-2 rounded-xl text-[10px]">
                        ديون معلقة: <%= stats.unpaid %> مواد
                    </div>
                </div>
            </div>
        </section>

        <section id="studentsView" class="view-section">
            <input type="text" id="search" onkeyup="filter()" placeholder="بحث سريع..." 
                   class="w-full p-4 rounded-2xl bg-white shadow-sm border-none mb-4 outline-none focus:ring-2 ring-blue-500">
            
            <div id="studentContainer" class="space-y-4">
                <% students.forEach((s) => { %>
                <div class="card bg-white p-5 rounded-[2rem] border border-slate-50 shadow-sm transition-all">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h4 class="font-bold text-slate-800"><%= s.name %></h4>
                            <span class="text-[9px] bg-blue-50 text-blue-600 px-2 py-0.5 rounded-full font-bold">
                                <%= s.cycle %> - <%= s.year %>
                            </span>
                        </div>
                        <button onclick="fastDeleteStudent('<%= s.id %>', this)" class="text-red-200 hover:text-red-500 transition-colors">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>

                    <div class="space-y-3">
                        <% if(s.subjects) { s.subjects.forEach((sub, subIdx) => { %>
                        <div class="bg-slate-50/50 p-4 rounded-2xl border border-slate-100">
                            <div class="flex justify-between items-center mb-3">
                                <span class="text-xs font-bold text-slate-600"><%= sub.name %></span>
                                <button onclick="fastTogglePaid('<%= s.id %>', <%= subIdx %>, this)" 
                                    class="text-[9px] px-3 py-1 rounded-lg font-bold <%= sub.paid ? 'bg-green-500 text-white' : 'bg-white text-red-500 border border-red-100 shadow-sm' %>">
                                    <%= sub.paid ? 'خالص ✓' : 'غير خالص' %>
                                </button>
                            </div>
                            <div class="flex flex-wrap gap-1.5">
                                <% sub.attendance.forEach((done, attIdx) => { %>
                                <div onclick="fastUpdateAtt('<%= s.id %>', <%= subIdx %>, <%= attIdx %>, this)" 
                                    class="attendance-checkbox <%= done ? 'checked' : '' %>">
                                    <%= attIdx + 1 %>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <% })} %>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <div id="addModal" class="fixed inset-0 bg-slate-900/50 hidden backdrop-blur-sm z-[100] flex items-end sm:items-center justify-center">
        <form onsubmit="addStudent(event)" class="bg-white w-full max-w-md p-6 rounded-t-[2.5rem] sm:rounded-[2.5rem] space-y-4 shadow-2xl">
            <h3 class="text-lg font-black text-slate-800 text-center">تسجيل طالب جديد</h3>
            
            <input name="name" type="text" placeholder="اسم الطالب" class="w-full p-4 bg-slate-50 rounded-2xl border-none outline-none focus:ring-2 ring-blue-500" required>
            
            <div class="grid grid-cols-2 gap-3">
                <select id="cSel" name="cycle" onchange="loadAlgerianSubjects()" class="p-4 bg-slate-50 rounded-2xl text-sm" required>
                    <option value="">الطور</option>
                    <option>ابتدائي</option>
                    <option>متوسط</option>
                    <option>ثانوي</option>
                </select>
                <input name="sessionsCount" type="number" placeholder="عدد الحصص" value="4" class="p-4 bg-slate-50 rounded-2xl text-sm" required>
            </div>

            <div class="max-h-40 overflow-y-auto p-2 bg-slate-50 rounded-2xl">
                <p class="text-[10px] font-bold text-slate-400 mb-2">اختر مواد المنهاج الجزائري:</p>
                <div id="subList" class="flex flex-wrap gap-2"></div>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white p-4 rounded-2xl font-bold shadow-lg">حفظ البيانات</button>
            <button type="button" onclick="closeModal()" class="w-full text-slate-400 text-xs">إلغاء</button>
        </form>
    </div>

    <nav class="fixed bottom-4 left-1/2 -translate-x-1/2 w-[90%] max-w-sm bg-white border shadow-2xl rounded-full p-2 flex justify-around items-center">
        <button onclick="tab('statsView')" class="p-3 text-slate-400 focus:text-blue-600"><i class="fas fa-chart-pie text-xl"></i></button>
        <button onclick="openModal()" class="w-12 h-12 bg-blue-600 rounded-full text-white shadow-xl"><i class="fas fa-plus"></i></button>
        <button onclick="tab('studentsView')" class="p-3 text-slate-400 focus:text-blue-600"><i class="fas fa-user-graduate text-xl"></i></button>
    </nav>

    <script>
        // إحصائيات حقيقية من الخادم
        const stats = <%- JSON.stringify(stats) %>;
        new Chart(document.getElementById('cycleChart'), {
            type: 'doughnut',
            data: { 
                labels: ['ابتدائي', 'متوسط', 'ثانوي'], 
                datasets: [{ data: stats.cycleData, backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'], borderWeight: 0 }] 
            },
            options: { cutout: '70%', plugins: { legend: { display: false } } }
        });

        // المنهاج الجزائري
        const dzSubjects = [
            'اللغة العربية', 'الرياضيات', 'العلوم الطبيعية', 'الفيزياء', 'الإنجليزية', 
            'الفرنسية', 'التاريخ والجغرافيا', 'التربية الإسلامية', 'فلسفة', 
            'إعلام آلي', 'تكنولوجيا', 'علوم اقتصادية', 'أدب عربي', 'أمازيغية'
        ];

        function loadAlgerianSubjects() {
            const sl = document.getElementById('subList');
            sl.innerHTML = dzSubjects.map(s => `
                <label class="flex items-center gap-2 bg-white px-3 py-2 rounded-xl text-[10px] font-bold border border-slate-200 cursor-pointer">
                    <input type="checkbox" name="subjects" value="${s}" class="accent-blue-600"> ${s}
                </label>
            `).join('');
        }

        // سرعة فائقة في التحديث (Optimistic UI)
        async function fastUpdateAtt(id, sIdx, aIdx, btn) {
            btn.classList.toggle('checked'); // تحديث فوري بصري
            await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'attendance', attIndex: aIdx, value: btn.classList.contains('checked').toString() })
            });
        }

        async function fastTogglePaid(id, sIdx, btn) {
            const isPaid = !btn.classList.contains('bg-green-500');
            btn.className = isPaid ? "text-[9px] px-3 py-1 rounded-lg font-bold bg-green-500 text-white" : "text-[9px] px-3 py-1 rounded-lg font-bold bg-white text-red-500 border border-red-100 shadow-sm";
            btn.innerText = isPaid ? "خالص ✓" : "غير خالص";
            await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'paid', value: isPaid.toString() })
            });
        }

        async function addStudent(e) {
            e.preventDefault();
            const fd = new FormData(e.target);
            const data = Object.fromEntries(fd.entries());
            data.subjects = fd.getAll('subjects');
            const res = await fetch('/add-student', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
            if(res.ok) window.location.reload();
        }

        async function fastDeleteStudent(id, btn) {
            if(confirm("حذف الطالب نهائياً؟")) {
                btn.closest('.card').remove();
                await fetch(`/delete/${id}`, { method: 'POST' });
            }
        }

        function tab(id) {
            document.querySelectorAll('.view-section').forEach(v => v.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }
        function openModal() { document.getElementById('addModal').classList.remove('hidden'); loadAlgerianSubjects(); }
        function closeModal() { document.getElementById('addModal').classList.add('hidden'); }
        function filter() {
            const q = document.getElementById('search').value.toLowerCase();
            document.querySelectorAll('.card').forEach(c => c.style.display = c.innerText.toLowerCase().includes(q) ? 'block' : 'none');
        }
    </script>
</body>
</html>
