<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أكاديمية المعالي PRO</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap');
        body { font-family: 'Cairo', sans-serif; background: #f0f2f5; color: #1a202c; }
        .glass { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); border: 1px solid white; }
        .att-btn { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .att-active { background-color: #22c55e !important; border-color: #22c55e !important; transform: scale(1.1); box-shadow: 0 0 10px rgba(34, 197, 94, 0.5); }
        /* استجابة للهاتف */
        @media (max-width: 640px) { .hide-mobile { display: none; } }
    </style>
</head>
<body class="p-4 md:p-8">

    <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
            <div>
                <h1 class="text-3xl font-800 text-blue-900">أكاديمية المعالي</h1>
                <p class="text-slate-500 font-semibold">نظام الإدارة الشامل v2.0</p>
            </div>
            <button onclick="document.getElementById('modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-2xl shadow-lg transition-all font-bold w-full md:w-auto">
                <i class="fas fa-plus ml-2"></i> إضافة طالب جديد
            </button>
        </div>

        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <div class="glass p-6 rounded-[2rem] shadow-sm flex items-center gap-4">
                <div class="w-20 h-20"><canvas id="statsChart"></canvas></div>
                <div>
                    <p class="text-xs text-slate-500 font-bold uppercase">الطلاب</p>
                    <h3 class="text-2xl font-800"><%= count %></h3>
                </div>
            </div>
            <div class="glass p-6 rounded-[2rem] shadow-sm text-center">
                <p class="text-blue-500 font-bold text-sm">ابتدائي</p>
                <h3 class="text-2xl font-800"><%= stats.primary %></h3>
            </div>
            <div class="glass p-6 rounded-[2rem] shadow-sm text-center">
                <p class="text-green-500 font-bold text-sm">متوسط</p>
                <h3 class="text-2xl font-800"><%= stats.middle %></h3>
            </div>
            <div class="glass p-6 rounded-[2rem] shadow-sm text-center">
                <p class="text-orange-500 font-bold text-sm">ثانوي</p>
                <h3 class="text-2xl font-800"><%= stats.secondary %></h3>
            </div>
        </div>

        <div class="glass rounded-[2rem] shadow-2xl overflow-hidden border-none">
            <div class="bg-white p-6 border-b flex justify-between items-center">
                <h2 class="font-800 text-lg flex items-center gap-2">
                    <i class="fas fa-calendar-check text-blue-600"></i> متابعة حصص الشهر الحالي
                </h2>
                <span class="text-xs bg-slate-100 px-3 py-1 rounded-full font-bold text-slate-500">محدث الآن</span>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-right">
                    <thead class="bg-slate-50 text-slate-400 text-xs uppercase">
                        <tr>
                            <th class="p-5">معلومات الطالب</th>
                            <th class="p-5 text-center">حصة 1</th>
                            <th class="p-5 text-center">حصة 2</th>
                            <th class="p-5 text-center">حصة 3</th>
                            <th class="p-5 text-center">حصة 4</th>
                            <th class="p-5 text-center">الحالة المالية</th>
                            <th class="p-5 text-center">إجراء</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        <% students.forEach(s => { %>
                        <tr class="hover:bg-blue-50/30 transition">
                            <td class="p-5">
                                <div class="font-bold text-slate-800"><%= s.name %></div>
                                <div class="text-[10px] text-blue-500 font-bold"><%= s.cycle %> - <%= s.year %></div>
                            </td>
                            <% for(let i=0; i<4; i++) { %>
                            <td class="p-5 text-center">
                                <button onclick="updateData('<%= s.id %>', 'attendance', <%= i %>, this)" 
                                    class="att-btn w-7 h-7 rounded-full border-2 border-slate-200 <%= s.attendance && s.attendance[i] ? 'att-active' : '' %>">
                                </button>
                            </td>
                            <% } %>
                            <td class="p-5 text-center">
                                <button onclick="updateData('<%= s.id %>', 'paid', null, this)" 
                                    class="px-4 py-1 rounded-full text-[11px] font-bold transition-all <%= s.paid ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-600' %>">
                                    <%= s.paid ? 'تم الدفع' : 'لم يدفع' %>
                                </button>
                            </td>
                            <td class="p-5 text-center">
                                <form action="/delete/<%= s.id %>" method="POST" onsubmit="return confirm('هل أنت متأكد؟')">
                                    <button class="text-slate-300 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="modal" class="fixed inset-0 bg-slate-900/60 hidden backdrop-blur-sm z-50 flex items-center justify-center p-4">
        <form action="/add-student" method="POST" class="bg-white w-full max-w-md p-8 rounded-[2.5rem] shadow-2xl scale-in">
            <h3 class="text-2xl font-800 mb-6 text-slate-800">تسجيل طالب</h3>
            <div class="space-y-4">
                <input name="name" type="text" placeholder="الاسم الكامل" class="w-full bg-slate-100 border-none p-4 rounded-2xl outline-none focus:ring-2 ring-blue-500" required>
                <select name="cycle" class="w-full bg-slate-100 border-none p-4 rounded-2xl outline-none" required>
                    <option>ابتدائي</option><option>متوسط</option><option>ثانوي</option>
                </select>
                <input name="year" type="text" placeholder="السنة الدراسية" class="w-full bg-slate-100 border-none p-4 rounded-2xl outline-none" required>
            </div>
            <div class="mt-8 flex gap-3">
                <button type="submit" class="flex-1 bg-blue-600 text-white py-4 rounded-2xl font-bold shadow-lg hover:bg-blue-700 transition">حفظ</button>
                <button type="button" onclick="document.getElementById('modal').classList.add('hidden')" class="flex-1 bg-slate-100 text-slate-500 py-4 rounded-2xl font-bold">إغاء</button>
            </div>
        </form>
    </div>

    <script>
        // إعداد الرسم البياني
        new Chart(document.getElementById('statsChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                datasets: [{
                    data: [<%= stats.primary %>, <%= stats.middle %>, <%= stats.secondary %>],
                    backgroundColor: ['#3b82f6', '#22c55e', '#f97316'],
                    borderWidth: 0
                }]
            },
            options: { cutout: '75%', plugins: { legend: { display: false } } }
        });

        // وظيفة التحديث السريع
        async function updateData(id, type, index, btn) {
            let val;
            if (type === 'attendance') {
                val = !btn.classList.contains('att-active');
                btn.classList.toggle('att-active');
            } else {
                val = (btn.innerText.trim() === 'لم يدفع');
                btn.innerText = val ? 'تم الدفع' : 'لم يدفع';
                btn.className = `px-4 py-1 rounded-full text-[11px] font-bold transition-all ${val ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-600'}`;
            }

            try {
                await fetch(`/update/${id}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ type, index, value: val.toString() })
                });
            } catch (e) { console.error("Update failed", e); }
        }
    </script>
</body>
</html>
