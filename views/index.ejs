<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أكاديمية المعالي - SPA</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap');
        body { font-family: 'Cairo', sans-serif; background: #f1f5f9; }
        .att-box { width: 32px; height: 32px; border-radius: 8px; border: 2px solid #e2e8f0; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: 800; transition: 0.2s; }
        .att-box.active { background: #10b981; border-color: #10b981; color: white; transform: scale(1.05); }
        .view-section { display: none; }
        .view-section.active { display: block; }
    </style>
</head>
<body class="pb-24">

    <nav class="bg-white/80 backdrop-blur-md sticky top-0 z-50 p-4 border-b flex items-center gap-3">
        <img src="https://res.cloudinary.com/duixjs8az/image/upload/v1765132270/post_media/1765132269901-1765132158292.jpg" class="w-10 h-10 rounded-full border border-blue-600">
        <h1 class="font-900 text-blue-900 text-lg">أكاديمية المعالي</h1>
    </nav>

    <main class="max-w-xl mx-auto p-4">
        
        <section id="statsView" class="view-section active space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-white p-4 rounded-[2rem] shadow-sm flex flex-col items-center">
                    <canvas id="cycleChart" width="130" height="130"></canvas>
                    <p class="text-[10px] font-bold text-slate-400 mt-2">توزيع الأطوار</p>
                </div>
                <div class="flex flex-col gap-3">
                    <div class="bg-blue-600 p-5 rounded-[2rem] text-white shadow-lg">
                        <p class="text-[10px] opacity-80">الطلاب</p>
                        <h2 id="totalStudents" class="text-3xl font-900">0</h2>
                    </div>
                    <div class="bg-white p-5 rounded-[2rem] border border-red-50">
                        <p class="text-[10px] text-slate-400">ديون</p>
                        <h2 id="unpaidStats" class="text-2xl font-900 text-red-500">0</h2>
                    </div>
                </div>
            </div>
        </section>

        <section id="studentsView" class="view-section space-y-4">
            <input type="text" onkeyup="filter(this.value)" placeholder="بحث سريع..." class="w-full p-4 rounded-2xl bg-white border-none shadow-sm outline-none focus:ring-2 ring-blue-500 mb-2">
            <div id="container" class="space-y-4">
                </div>
        </section>
    </main>

    <div class="fixed bottom-6 left-1/2 -translate-x-1/2 w-[85%] max-w-sm bg-white border shadow-2xl rounded-full p-2 flex justify-around items-center z-50">
        <button onclick="tab('statsView')" class="p-3 text-slate-400 focus:text-blue-600"><i class="fas fa-chart-line text-xl"></i></button>
        <button onclick="openModal()" class="w-12 h-12 bg-blue-600 text-white rounded-full shadow-lg -mt-10 border-4 border-white"><i class="fas fa-plus"></i></button>
        <button onclick="tab('studentsView')" class="p-3 text-slate-400 focus:text-blue-600"><i class="fas fa-users text-xl"></i></button>
    </div>

    <div id="addModal" class="fixed inset-0 bg-slate-900/40 hidden backdrop-blur-md z-[100] flex items-center justify-center p-4">
        <form onsubmit="addStudent(event)" class="bg-white w-full max-w-sm p-6 rounded-[2.5rem] space-y-4">
            <h3 class="text-center font-900 text-slate-800">تسجيل طالب</h3>
            <input name="name" type="text" placeholder="الاسم" class="w-full p-4 bg-slate-50 rounded-2xl outline-none" required>
            <div class="grid grid-cols-2 gap-2">
                <select name="cycle" class="p-4 bg-slate-50 rounded-2xl" required>
                    <option value="ابتدائي">ابتدائي</option><option value="متوسط">متوسط</option><option value="ثانوي">ثانوي</option>
                </select>
                <input name="sessions" type="number" value="4" class="p-4 bg-slate-50 rounded-2xl" placeholder="حصص">
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white p-4 rounded-2xl font-bold shadow-lg">إضافة</button>
            <button type="button" onclick="closeModal()" class="w-full text-xs text-slate-400">إلغاء</button>
        </form>
    </div>

    <script>
        let students = <%- JSON.stringify(students) %>;
        let chart;

        // تحديث الإحصائيات فوراً
        function updateStats() {
            const counts = { 'ابتدائي': 0, 'متوسط': 0, 'ثانوي': 0 };
            let unpaid = 0;
            students.forEach(s => {
                counts[s.cycle]++;
                s.subjects.forEach(sub => { if(!sub.paid) unpaid++; });
            });

            document.getElementById('totalStudents').innerText = students.length;
            document.getElementById('unpaidStats').innerText = unpaid;

            if (chart) chart.destroy();
            chart = new Chart(document.getElementById('cycleChart'), {
                type: 'doughnut',
                data: { datasets: [{ data: Object.values(counts), backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'], borderWeight: 0 }] },
                options: { cutout: '80%' }
            });
        }

        // بناء قائمة الطلاب في الوقت الحالي
        function renderStudents() {
            const container = document.getElementById('container');
            container.innerHTML = '';
            students.forEach((s, sIdx) => {
                let subjectsHtml = s.subjects.map((sub, subIdx) => `
                    <div class="bg-slate-50 p-3 rounded-2xl border border-slate-100 mb-2">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-[10px] font-black">${sub.name}</span>
                            <button onclick="togglePaid('${s.id}', ${subIdx}, this)" class="text-[9px] px-2 py-1 rounded-lg font-bold ${sub.paid ? 'bg-green-500 text-white' : 'bg-white text-red-500 border border-red-100'}">
                                ${sub.paid ? 'خالص' : 'غير خالص'}
                            </button>
                        </div>
                        <div class="flex flex-wrap gap-1">
                            ${sub.attendance.map((done, aIdx) => `
                                <div onclick="updateAtt('${s.id}', ${subIdx}, ${aIdx}, this)" class="att-box ${done ? 'active' : 'bg-white text-slate-300'}">${aIdx+1}</div>
                            `).join('')}
                        </div>
                    </div>
                `).join('');

                container.innerHTML += `
                    <div class="card bg-white p-5 rounded-[2rem] shadow-sm border border-slate-50">
                        <div class="flex justify-between items-center mb-3">
                            <div><h4 class="font-bold text-sm">${s.name}</h4><p class="text-[8px] text-slate-400">${s.cycle}</p></div>
                            <div class="flex gap-2">
                                <button onclick="addSubject('${s.id}')" class="text-blue-500 text-xs font-bold bg-blue-50 px-2 py-1 rounded-lg">+ مادة</button>
                                <button onclick="deleteStudent('${s.id}')" class="text-red-200 hover:text-red-500"><i class="fas fa-trash"></i></button>
                            </div>
                        </div>
                        ${subjectsHtml}
                    </div>
                `;
            });
            updateStats();
        }

        // العمليات الفورية (AJAX)
        async function updateAtt(id, sIdx, aIdx, el) {
            el.classList.toggle('active');
            const isNowActive = el.classList.contains('active');
            const student = students.find(s => s.id === id);
            student.subjects[sIdx].attendance[aIdx] = isNowActive;
            updateStats();
            await fetch(`/update-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'attendance', attIndex: aIdx, value: isNowActive.toString() })
            });
        }

        async function togglePaid(id, sIdx, btn) {
            const student = students.find(s => s.id === id);
            student.subjects[sIdx].paid = !student.subjects[sIdx].paid;
            renderStudents(); // لتغيير اللون فوراً
            await fetch(`/update-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'paid', value: student.subjects[sIdx].paid.toString() })
            });
        }

        async function addStudent(e) {
            e.preventDefault();
            const fd = new FormData(e.target);
            const data = Object.fromEntries(fd.entries());
            data.subjects = ['لغة عربية']; // مادة افتراضية
            const res = await fetch('/add-student', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
            const newStudent = await res.json();
            students.unshift(newStudent);
            closeModal();
            renderStudents();
        }

        async function addSubject(id) {
            const subName = prompt("اسم المادة الجديدة:");
            const sessions = prompt("عدد الحصص:", "4");
            if(subName) {
                const res = await fetch(`/add-subject/${id}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ subName, sessions })
                });
                const newSub = await res.json();
                students.find(s => s.id === id).subjects.push(newSub);
                renderStudents();
            }
        }

        async function deleteStudent(id) {
            if(confirm('حذف؟')) {
                students = students.filter(s => s.id !== id);
                renderStudents();
                await fetch(`/delete/${id}`, { method: 'POST' });
            }
        }

        function tab(id) {
            document.querySelectorAll('.view-section').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }
        function openModal() { document.getElementById('addModal').classList.remove('hidden'); }
        function closeModal() { document.getElementById('addModal').classList.add('hidden'); }
        function filter(q) {
            document.querySelectorAll('.card').forEach(c => c.style.display = c.innerText.toLowerCase().includes(q.toLowerCase()) ? 'block' : 'none');
        }

        // تشغيل أولي
        renderStudents();
    </script>
</body>
</html>
