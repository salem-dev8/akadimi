<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أكاديمية المعالي - النظام الاحترافي</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;800;900&display=swap');
        body { font-family: 'Cairo', sans-serif; background: #f0f2f5; }
        .glass-card { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.2); }
        .att-box { width: 35px; height: 35px; border-radius: 12px; border: 2px solid #e2e8f0; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1); font-weight: 800; font-size: 12px; }
        .att-box.active { background: #10b981; border-color: #10b981; color: white; transform: scale(1.1); box-shadow: 0 4px 12px rgba(16,185,129,0.3); }
        .view-section { display: none; }
        .view-section.active { display: block; animation: fadeIn 0.4s ease; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="pb-24">

    <nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200 px-6 py-4 flex justify-between items-center">
        <div class="flex items-center gap-4">
            <img src="https://res.cloudinary.com/duixjs8az/image/upload/v1765132270/post_media/1765132269901-1765132158292.jpg" 
                 alt="Logo" class="w-12 h-12 rounded-2xl shadow-lg object-cover border-2 border-blue-600">
            <h1 class="text-xl font-900 text-slate-800 tracking-tight">أكاديمية المعالي</h1>
        </div>
        <div id="statusIndicator" class="flex items-center gap-2">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-[10px] font-bold text-slate-500 uppercase">مزامنة فورية</span>
        </div>
    </nav>

    <main class="max-w-2xl mx-auto p-4">

        <section id="statsView" class="view-section active space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-white p-6 rounded-[2.5rem] shadow-sm flex flex-col items-center">
                    <canvas id="mainChart" width="150" height="150"></canvas>
                    <p class="mt-4 text-[10px] font-bold text-slate-400">توزيع الأطوار التعليمية</p>
                </div>
                <div class="flex flex-col gap-4">
                    <div class="bg-blue-600 p-6 rounded-[2rem] text-white shadow-xl">
                        <p class="text-xs opacity-80">إجمالي الطلاب</p>
                        <h2 class="text-4xl font-900"><%= stats.total %></h2>
                    </div>
                    <div class="bg-white p-6 rounded-[2rem] border border-red-50">
                        <p class="text-xs text-slate-400">تحصيل الدفع المعلق</p>
                        <h2 class="text-2xl font-900 text-red-500"><%= stats.unpaid %> <span class="text-xs">مواد</span></h2>
                    </div>
                </div>
            </div>
        </section>

        <section id="studentsView" class="view-section space-y-4">
            <div class="relative">
                <i class="fas fa-search absolute right-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                <input type="text" id="searchInput" onkeyup="filterStudents()" placeholder="ابحث عن طالب أو مادة..." 
                       class="w-full p-4 pr-12 rounded-2xl bg-white border-none shadow-sm focus:ring-2 ring-blue-500 transition-all outline-none">
            </div>

            <div id="container">
                <% students.forEach((s, sIdx) => { %>
                <div class="student-card mb-4 bg-white p-5 rounded-[2.5rem] shadow-sm border border-slate-100 hover:shadow-md transition-all">
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center font-black">
                                <%= s.name[0] %>
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-800"><%= s.name %></h3>
                                <p class="text-[10px] text-slate-400 font-bold"><%= s.cycle %> | <%= s.year %></p>
                            </div>
                        </div>
                        <button onclick="deleteStudent('<%= s.id %>', this)" class="text-red-100 hover:text-red-500 p-2 transition-colors">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>

                    <div class="space-y-3">
                        <% s.subjects.forEach((sub, subIdx) => { %>
                        <div class="bg-slate-50/50 p-4 rounded-3xl border border-slate-100">
                            <div class="flex justify-between items-center mb-3">
                                <span class="text-xs font-black text-slate-600"><%= sub.name %></span>
                                <button onclick="togglePaid('<%= s.id %>', <%= subIdx %>, this)" 
                                        class="pay-btn text-[9px] px-3 py-1.5 rounded-xl font-bold transition-all <%= sub.paid ? 'bg-green-500 text-white shadow-lg shadow-green-100' : 'bg-white text-red-500 border border-red-100' %>">
                                    <%= sub.paid ? 'تم الدفع ✓' : 'غير خالص' %>
                                </button>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <% sub.attendance.forEach((done, attIdx) => { %>
                                <div onclick="updateAtt('<%= s.id %>', <%= subIdx %>, <%= attIdx %>, this)" 
                                     class="att-box <%= done ? 'active' : 'bg-white text-slate-300' %>">
                                    <%= attIdx + 1 %>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <div class="fixed bottom-6 left-1/2 -translate-x-1/2 w-[90%] max-w-sm bg-white/90 backdrop-blur-xl border border-slate-200 shadow-2xl rounded-full p-2 flex justify-around items-center z-50">
        <button onclick="showSection('statsView')" class="nav-btn p-4 text-slate-400 active-nav"><i class="fas fa-chart-pie text-xl"></i></button>
        <button onclick="openModal()" class="w-14 h-14 bg-blue-600 text-white rounded-full shadow-xl shadow-blue-200 -mt-10 border-4 border-white transform transition hover:scale-110 active:scale-95 flex items-center justify-center">
            <i class="fas fa-user-plus text-lg"></i>
        </button>
        <button onclick="showSection('studentsView')" class="nav-btn p-4 text-slate-400"><i class="fas fa-users text-xl"></i></button>
    </div>

    <div id="addModal" class="fixed inset-0 bg-slate-900/40 hidden backdrop-blur-md z-[100] flex items-end sm:items-center justify-center p-0 sm:p-4">
        <form onsubmit="submitForm(event)" class="bg-white w-full max-w-md p-8 rounded-t-[3rem] sm:rounded-[3rem] shadow-2xl animate-fadeIn space-y-4">
            <div class="w-12 h-1.5 bg-slate-200 rounded-full mx-auto -mt-4 mb-4 sm:hidden"></div>
            <h2 class="text-xl font-900 text-slate-800 text-center">تسجيل جديد</h2>
            
            <input name="name" type="text" placeholder="اسم الطالب الثلاثي" class="w-full p-4 bg-slate-50 rounded-2xl border-none outline-none focus:ring-2 ring-blue-500 font-bold" required>
            
            <div class="grid grid-cols-2 gap-3">
                <select name="cycle" id="cycleSelector" onchange="updateYearsAndSubjects()" class="p-4 bg-slate-50 rounded-2xl font-bold outline-none" required>
                    <option value="">الطور</option>
                    <option value="ابتدائي">ابتدائي</option>
                    <option value="متوسط">متوسط</option>
                    <option value="ثانوي">ثانوي</option>
                </select>
                <select name="year" id="yearSelector" class="p-4 bg-slate-50 rounded-2xl font-bold outline-none" required>
                    <option value="">السنة</option>
                </select>
            </div>

            <div class="flex items-center gap-3 p-4 bg-blue-50 rounded-2xl">
                <i class="fas fa-calendar-check text-blue-600"></i>
                <input name="sessions" type="number" value="4" min="1" max="12" class="bg-transparent font-black text-blue-600 w-full outline-none">
                <span class="text-[10px] font-black text-blue-400 uppercase">حصة/شهر</span>
            </div>

            <div class="bg-slate-50 p-4 rounded-2xl">
                <p class="text-[10px] font-black text-slate-400 mb-3 uppercase">المواد (حسب المنهاج الجزائري):</p>
                <div id="subjectsGrid" class="grid grid-cols-2 gap-2 max-h-40 overflow-y-auto">
                    </div>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white p-5 rounded-2xl font-900 shadow-xl hover:bg-blue-700 transition-all">تأكيد التسجيل</button>
            <button type="button" onclick="closeModal()" class="w-full text-slate-400 font-bold text-xs">إلغاء</button>
        </form>
    </div>

    <script>
        const stats = <%- JSON.stringify(stats) %>;
        
        // رسم بياني حقيقي
        new Chart(document.getElementById('mainChart'), {
            type: 'doughnut',
            data: { 
                labels: ['ابتدائي', 'متوسط', 'ثانوي'],
                datasets: [{ data: [stats.primary, stats.middle, stats.high], backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'], borderWeight: 0, hoverOffset: 15 }]
            },
            options: { cutout: '80%', plugins: { legend: { display: false } } }
        });

        // بيانات المنهاج الجزائري
        const dzCurriculum = {
            'ابتدائي': { years: 5, subs: ['لغة عربية', 'رياضيات', 'لغة فرنسية', 'تربية إسلامية', 'تاريخ وجغرافيا'] },
            'متوسط': { years: 4, subs: ['لغة عربية', 'رياضيات', 'فيزياء', 'علوم طبيعية', 'لغة إنجليزية', 'لغة فرنسية', 'تاريخ وجغرافيا'] },
            'ثانوي': { years: 3, subs: ['رياضيات', 'فيزياء', 'علوم طبيعية', 'فلسفة', 'لغة عربية', 'إعلام آلي', 'محاسبة', 'إقتصاد'] }
        };

        function updateYearsAndSubjects() {
            const cycle = document.getElementById('cycleSelector').value;
            const ySel = document.getElementById('yearSelector');
            const sGrid = document.getElementById('subjectsGrid');
            ySel.innerHTML = '<option value="">السنة</option>';
            sGrid.innerHTML = '';

            if (dzCurriculum[cycle]) {
                for(let i=1; i<=dzCurriculum[cycle].years; i++) ySel.innerHTML += `<option value="${i}">السنة ${i}</option>`;
                dzCurriculum[cycle].subs.forEach(s => {
                    sGrid.innerHTML += `
                        <label class="flex items-center gap-2 bg-white p-3 rounded-xl border border-slate-100 text-[10px] font-bold cursor-pointer">
                            <input type="checkbox" name="subjects" value="${s}" class="accent-blue-600"> ${s}
                        </label>`;
                });
            }
        }

        // تحديث "الوقت الحالي" (Optimistic Updates)
        async function updateAtt(id, sIdx, aIdx, element) {
            const isNowActive = !element.classList.contains('active');
            element.classList.toggle('active'); // تحديث بصري فوري
            
            await fetch(`/update-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'attendance', attIndex: aIdx, value: isNowActive.toString() })
            });
        }

        async function togglePaid(id, sIdx, btn) {
            const isPaid = !btn.classList.contains('bg-green-500');
            // تغيير فوري
            btn.className = isPaid ? "text-[9px] px-3 py-1.5 rounded-xl font-bold bg-green-500 text-white shadow-lg shadow-green-100" : "text-[9px] px-3 py-1.5 rounded-xl font-bold bg-white text-red-500 border border-red-100";
            btn.innerText = isPaid ? 'تم الدفع ✓' : 'غير خالص';

            await fetch(`/update-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'paid', value: isPaid.toString() })
            });
        }

        async function submitForm(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            data.subjects = formData.getAll('subjects');
            
            const res = await fetch('/add-student', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
            if(res.ok) window.location.reload();
        }

        async function deleteStudent(id, btn) {
            if(confirm('هل تريد حذف الطالب؟')) {
                btn.closest('.student-card').remove();
                await fetch(`/delete/${id}`, { method: 'POST' });
            }
        }

        function showSection(id) {
            document.querySelectorAll('.view-section').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function filterStudents() {
            const q = document.getElementById('searchInput').value.toLowerCase();
            document.querySelectorAll('.student-card').forEach(c => {
                c.style.display = c.innerText.toLowerCase().includes(q) ? 'block' : 'none';
            });
        }

        function openModal() { document.getElementById('addModal').classList.remove('hidden'); }
        function closeModal() { document.getElementById('addModal').classList.add('hidden'); }
    </script>
</body>
</html>
