<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أكاديمية المعالي | لوحة التحكم</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap');
        body { font-family: 'Cairo', sans-serif; background: #f8fafc; }
        .attendance-checkbox { width: 34px; height: 34px; border-radius: 10px; border: 2px solid #e2e8f0; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: bold; transition: 0.3s; color: #94a3b8; }
        .attendance-checkbox.checked { background: #10b981; border-color: #10b981; color: white; }
        .view-section { display: none; }
        .view-section.active { display: block; }
    </style>
</head>
<body class="pb-28">

    <nav class="bg-white border-b p-4 sticky top-0 z-50 flex justify-between items-center shadow-sm">
        <h1 class="font-900 text-blue-800 text-xl">أكاديمية المعالي</h1>
        <div class="bg-blue-50 text-blue-600 px-4 py-1 rounded-full text-xs font-bold">نشط حالياً</div>
    </nav>

    <main class="max-w-2xl mx-auto p-4">
        
        <section id="statsView" class="view-section active space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-white p-5 rounded-[2rem] shadow-sm border border-slate-100 flex flex-col items-center">
                    <p class="text-[10px] font-bold text-slate-400 mb-2">توزيع الأطوار</p>
                    <div class="h-32 w-32"><canvas id="cycleChart"></canvas></div>
                </div>
                <div class="bg-indigo-600 p-5 rounded-[2rem] text-white flex flex-col justify-center">
                    <p class="text-xs opacity-70">إجمالي الطلاب</p>
                    <p class="text-3xl font-900"><%= stats.total %></p>
                    <p class="mt-4 text-[10px] bg-white/20 p-2 rounded-xl">المستحقات المعلقة: <%= stats.unpaid %></p>
                </div>
            </div>
            <div class="bg-white p-6 rounded-[2rem] shadow-sm border border-slate-100">
                <p class="text-[10px] font-bold text-slate-400 mb-4">أداء المداخيل التقريبي</p>
                <canvas id="incomeChart" height="120"></canvas>
            </div>
        </section>

        <section id="studentsView" class="view-section space-y-4">
            <div class="flex gap-2">
                <input type="text" id="search" onkeyup="filter()" placeholder="ابحث عن اسم الطالب..." class="flex-1 p-4 rounded-2xl bg-white border-none shadow-sm text-sm outline-none">
            </div>

            <div id="studentContainer" class="space-y-4">
                <% students.forEach((s, sIdx) => { %>
                <div class="card bg-white p-5 rounded-[2rem] border border-slate-100 shadow-sm space-y-4">
                    <div class="flex justify-between items-start">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-blue-600 rounded-2xl flex items-center justify-center text-white font-bold text-lg"><%= s.name[0] %></div>
                            <div>
                                <h4 class="font-bold text-slate-800"><%= s.name %></h4>
                                <p class="text-[10px] text-slate-400"><%= s.cycle %> • <%= s.year %></p>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="addSubjectPrompt('<%= s.id %>')" class="p-2 text-blue-500 bg-blue-50 rounded-lg text-xs"><i class="fas fa-plus"></i> مادة</button>
                            <form action="/delete/<%= s.id %>" method="POST" onsubmit="return confirm('حذف؟')"><button class="p-2 text-red-300"><i class="fas fa-trash"></i></button></form>
                        </div>
                    </div>

                    <div class="space-y-3">
                        <% if(s.subjects && s.subjects.length > 0) { %>
                            <% s.subjects.forEach((sub, subIdx) => { %>
                            <div class="bg-slate-50 p-4 rounded-2xl border border-slate-100">
                                <div class="flex justify-between items-center mb-3">
                                    <span class="text-xs font-bold text-slate-700"><%= sub.name %></span>
                                    <button onclick="togglePaid('<%= s.id %>', <%= subIdx %>, this)" 
                                        class="text-[9px] px-3 py-1 rounded-lg font-bold transition-all <%= sub.paid ? 'bg-green-500 text-white' : 'bg-red-50 text-red-500 border border-red-100' %>">
                                        <%= sub.paid ? 'تم الدفع ✓' : 'غير خالص' %>
                                    </button>
                                </div>
                                <div class="flex flex-wrap gap-2">
                                    <% sub.attendance.forEach((done, attIdx) => { %>
                                    <div onclick="updateAtt('<%= s.id %>', <%= subIdx %>, <%= attIdx %>, this)" 
                                        class="attendance-checkbox <%= done ? 'checked' : '' %>">
                                        <%= attIdx + 1 %>
                                    </div>
                                    <% }) %>
                                </div>
                            </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-[10px] text-slate-400 text-center">لا توجد مواد مسجلة لهذا الطالب</p>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <div class="fixed bottom-6 left-1/2 -translate-x-1/2 w-[90%] max-w-sm bg-white border shadow-2xl rounded-full h-16 flex items-center justify-around px-4 z-50">
        <button onclick="tab('statsView')" class="p-4 text-slate-400 hover:text-blue-600"><i class="fas fa-chart-bar text-xl"></i></button>
        <button onclick="openModal()" class="w-14 h-14 bg-blue-600 rounded-full text-white shadow-xl -mt-10 border-4 border-white flex items-center justify-center"><i class="fas fa-plus"></i></button>
        <button onclick="tab('studentsView')" class="p-4 text-slate-400 hover:text-blue-600"><i class="fas fa-users text-xl"></i></button>
    </div>

    <div id="addModal" class="fixed inset-0 bg-black/50 hidden backdrop-blur-sm z-[100] flex items-center justify-center p-4">
        <form action="/add-student" method="POST" class="bg-white w-full max-w-sm p-6 rounded-[2rem] space-y-4">
            <h3 class="text-center font-bold">تسجيل طالب جديد</h3>
            <input name="name" type="text" placeholder="اسم الطالب" class="w-full p-4 bg-slate-50 rounded-2xl outline-none" required>
            <div class="grid grid-cols-2 gap-2">
                <select id="cSel" name="cycle" onchange="loadOptions()" class="p-4 bg-slate-50 rounded-2xl text-sm" required>
                    <option value="">الطور</option><option>ابتدائي</option><option>متوسط</option><option>ثانوي</option>
                </select>
                <select id="ySel" name="year" class="p-4 bg-slate-50 rounded-2xl text-sm" required><option value="">السنة</option></select>
            </div>
            <div id="subList" class="flex flex-wrap gap-2 py-2"></div>
            <button type="submit" class="w-full bg-blue-600 text-white p-4 rounded-2xl font-bold">حفظ الطالب</button>
            <button type="button" onclick="closeModal()" class="w-full text-slate-400 text-sm">إلغاء</button>
        </form>
    </div>

    <script>
        // إحصائيات حقيقية
        const stats = <%- JSON.stringify(stats) %>;
        new Chart(document.getElementById('cycleChart'), {
            type: 'doughnut',
            data: { labels: ['إبتدائي', 'متوسط', 'ثانوي'], datasets: [{ data: stats.cycleData, backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'], borderWeight: 0 }] },
            options: { cutout: '80%', plugins: { legend: { display: false } } }
        });

        new Chart(document.getElementById('incomeChart'), {
            type: 'line',
            data: { labels: ['S', 'O', 'N', 'D', 'J'], datasets: [{ data: stats.incomeData, borderColor: '#4f46e5', tension: 0.4, fill: true, backgroundColor: 'rgba(79, 70, 229, 0.05)' }] },
            options: { plugins: { legend: { display: false } }, scales: { y: { display: false }, x: { grid: { display: false } } } }
        });

        // وظائف الواجهة
        function tab(id) {
            document.querySelectorAll('.view-section').forEach(v => v.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function loadOptions() {
            const c = document.getElementById('cSel').value;
            const y = document.getElementById('ySel');
            const sl = document.getElementById('subList');
            y.innerHTML = ''; sl.innerHTML = '';
            const count = c === 'ابتدائي' ? 5 : (c === 'متوسط' ? 4 : 3);
            for(let i=1; i<=count; i++) y.innerHTML += `<option>السنة ${i}</option>`;
            
            const subs = { 'ابتدائي': ['عربية', 'رياضيات'], 'متوسط': ['فيزياء', 'رياضيات', 'علوم'], 'ثانوي': ['فلسفة', 'رياضيات', 'فيزياء'] };
            subs[c]?.forEach(s => sl.innerHTML += `<label class="bg-slate-100 p-2 rounded-xl text-[10px]"><input type="checkbox" name="subjects" value="${s}"> ${s}</label>`);
        }

        async function updateAtt(id, sIdx, aIdx, btn) {
            const isVal = !btn.classList.contains('checked');
            const res = await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'attendance', attIndex: aIdx, value: isVal.toString() })
            });
            if (res.ok) location.reload();
        }

        async function togglePaid(id, sIdx, btn) {
            const isVal = !btn.classList.contains('bg-green-500');
            const res = await fetch(`/update-sub-status/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ subIndex: sIdx, type: 'paid', value: isVal.toString() })
            });
            if (res.ok) location.reload();
        }

        function addSubjectPrompt(id) {
            const subName = prompt("اسم المادة الجديدة:");
            const sessions = prompt("عدد الحصص (مثلاً 3 أو 4):", "4");
            if(subName) {
                fetch(`/add-subject/${id}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ subName, sessions })
                }).then(() => location.reload());
            }
        }

        function filter() {
            const q = document.getElementById('search').value.toLowerCase();
            document.querySelectorAll('.card').forEach(c => c.style.display = c.innerText.toLowerCase().includes(q) ? 'block' : 'none');
        }

        function openModal() { document.getElementById('addModal').classList.remove('hidden'); }
        function closeModal() { document.getElementById('addModal').classList.add('hidden'); }
    </script>
</body>
</html>
